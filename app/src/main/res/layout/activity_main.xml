<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="32dp"
    android:padding="8dp"
    android:background="#ECEFF1">

    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="0"
        android:textSize="36sp"
        android:padding="16dp"
        android:background="#263237"
        android:textColor="#FFFFFF"
        android:gravity="end|center_vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button android:id="@+id/btnClear" style="@style/CalcButtonStyle" android:background="#EF5350" android:text="C" />
            <Button android:id="@+id/btnSqrt" style="@style/CalcButtonStyle" android:background="#B0BEC5" android:text="âˆš" />
            <Button android:id="@+id/btnPower" style="@style/CalcButtonStyle" android:background="#B0BEC5" android:text="^" />
            <Button android:id="@+id/btnPercent" style="@style/CalcButtonStyle" android:background="#B0BEC5" android:text="%" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button android:id="@+id/btnSin" style="@style/CalcButtonStyle" android:background="#90CAF9" android:text="sin" />
            <Button android:id="@+id/btnCos" style="@style/CalcButtonStyle" android:background="#90CAF9" android:text="cos" />
            <Button android:id="@+id/btnTan" style="@style/CalcButtonStyle" android:background="#90CAF9" android:text="tan" />
            <Button android:id="@+id/btnLn" style="@style/CalcButtonStyle" android:background="#90CAF9" android:text="ln" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button android:id="@+id/btn7" style="@style/CalcButtonStyle" android:text="7" />
            <Button android:id="@+id/btn8" style="@style/CalcButtonStyle" android:text="8" />
            <Button android:id="@+id/btn9" style="@style/CalcButtonStyle" android:text="9" />
            <Button android:id="@+id/btnDivide" style="@style/CalcButtonStyle" android:background="#4DB6AC" android:text="/" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button android:id="@+id/btn4" style="@style/CalcButtonStyle" android:text="4" />
            <Button android:id="@+id/btn5" style="@style/CalcButtonStyle" android:text="5" />
            <Button android:id="@+id/btn6" style="@style/CalcButtonStyle" android:text="6" />
            <Button android:id="@+id/btnMultiply" style="@style/CalcButtonStyle" android:background="#4DB6AC" android:text="*" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button android:id="@+id/btn1" style="@style/CalcButtonStyle" android:text="1" />
            <Button android:id="@+id/btn2" style="@style/CalcButtonStyle" android:text="2" />
            <Button android:id="@+id/btn3" style="@style/CalcButtonStyle" android:text="3" />
            <Button android:id="@+id/btnMinus" style="@style/CalcButtonStyle" android:background="#4DB6AC" android:text="-" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button android:id="@+id/btnDot" style="@style/CalcButtonStyle" android:text="." />
            <Button android:id="@+id/btn0" style="@style/CalcButtonStyle" android:text="0" />
            <Button android:id="@+id/btnEquals" style="@style/CalcButtonStyle" android:background="#1A237E" android:text="=" android:textColor="#FFFFFF" />
            <Button android:id="@+id/btnPlus" style="@style/CalcButtonStyle" android:background="#4DB6AC" android:text="+" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
